{
    "manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
    "version": "0.9.0",
    "homepage_url": "https://world.openfoodfacts.org/",
    "icons": {
        "16": "/img/icons/Drive_Off_1616.png",
        "48": "/img/icons/Drive_Off_4848.png",
        "128": "/img/icons/Drive_Off_128128.png"
    },

    "permissions": [ ],
	  
    "content_scripts": [
        {
            "matches": [
				"https://www.auchandrive.fr/*",
				"https://*.leclercdrive.fr/*", 
				"https://*.carrefour.fr/*", 
				"https://www.casinodrive.fr/*", 
				"https://www.coradrive.fr/*", 
				"https://www.courseu.com/*",
				"https://www.greenweez.com/*",
				"https://drive.intermarche.com/*",
				"https://www.lidl.fr/*",
				"https://www.picard.fr/*",
				"https://livraison.thiriet.com/*",
				"https://www.aldi.fr/*"
				],
			"css": ["/css/myStyle.css"],
			"run_at": "document_end",
            "js": [
                    "/js/external/jquery.js",
					"/js/external/jbarcode.js",
                    "/js/content_script.js",
                    "/js/driveOff.class.js",
                    "/js/drive.class.js",
                    "/js/drive/carrefourfr.js",
                    "/js/drive/auchandrivefr.js",
                    "/js/drive/leclercdrivefr.js",
                    "/js/drive/casinodrivefr.js",
                    "/js/drive/coradrivefr.js",
                    "/js/drive/courseucom.js",
                    "/js/drive/greenweezcom.js",
                    "/js/drive/intermarchecom.js",
                    "/js/drive/picardfr.js",
                    "/js/drive/thirietcom.js",
                    "/js/drive/aldifr.js"
                ]
        }
    ],
	
	"web_accessible_resources":[
		"/img/*"
	],
  
    "default_locale": "fr"
}
